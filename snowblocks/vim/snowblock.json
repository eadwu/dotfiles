[
  {
    "clean": [
      "~/.vim"
    ]
  },
  {
    "link": {
      "~/.vimrc": {
        "path": ".vimrc",
        "force": true
      }
    }
  },
  {
    "shell": [
      [
        "mkdir -p ~/.vim/autoload/airline/themes",
        "Create ~/.vim/autoload/* directories"
      ],
      [
        "mkdir -p ~/.vim/colors",
        "Create ~/.vim/colors directory"
      ],
      [
        "curl -sLS https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim -o ~/.vim/autoload/plug.vim",
        "Downloading vim-plug"
      ],
      [
        "curl -sLS https://raw.githubusercontent.com/dylanaraps/wal.vim/master/autoload/airline/themes/wal.vim -o ~/.vim/autoload/airline/themes/wal.vim",
        "Downloading Wal airline theme"
      ],
      [
        "curl -sLS https://raw.githubusercontent.com/dylanaraps/wal.vim/master/colors/wal.vim -o ~/.vim/colors/wal.vim",
        "Downloading Wal color scheme"
      ]
    ]
  }
]
