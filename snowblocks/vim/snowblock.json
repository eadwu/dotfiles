[
  {
    "defaults": {
      "force": true
    }
  },
  {
    "link": {
      "~/.vimrc": {
        "path": ".vimrc"
      }
    }
  },
  {
    "shell": [
      [
        "mkdir -p ~/.vim/autoload/airline/themes",
        "Create ~/.vim/autoload/* directories"
      ],
      [
        "mkdir -p ~/.vim/colors",
        "Create ~/.vim/colors directory"
      ],
      [
        "curl -sLS https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim -o ~/.vim/autoload/plug.vim",
        "Downloading vim-plug"
      ],
      [
        "curl -sLS https://raw.githubusercontent.com/arcticicestudio/nord-vim/develop/autoload/airline/themes/nord.vim -o ~/.vim/autoload/airline/themes/nord.vim",
        "Downloading Nord airline theme"
      ],
      [
        "curl -sLS https://raw.githubusercontent.com/w0ng/vim-hybrid/master/colors/hybrid.vim -o ~/.vim/colors/hybrid.vim",
        "Downloading Hybrid color scheme"
      ],
      [
        "curl -sLS https://raw.githubusercontent.com/arcticicestudio/nord-vim/develop/colors/nord.vim -o ~/.vim/colors/nord.vim",
        "Downloading Nord color scheme"
      ]
    ]
  }
]
