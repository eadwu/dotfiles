[
  {
    "clean": [
      "~/.zsh"
    ]
  },
  {
    "link": {
      "~/.zshrc": {
        "path": ".zshrc",
        "force": true
      }
    }
  },
  {
    "shell": [
      [
        "if [ ! -d \"${HOME}/.zsh\" ]; then mkdir \"${HOME}/.zsh\"; fi",
        "Create ~/.zsh directory"
      ],
      [
        "wget https://raw.githubusercontent.com/sindresorhus/pure/master/pure.zsh -O ~/.zsh/prompt_pure_setup",
        "Downloading ~/.zsh/prompt_pure_setup"
      ],
      [
        "wget https://raw.githubusercontent.com/sindresorhus/pure/master/async.zsh -O ~/.zsh/async",
        "Downloading ~/.zsh/async"
      ]
    ]
  }
]
