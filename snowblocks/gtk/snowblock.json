[
  {
    "clean": [
      "~/.config/gtk-3.0",
      "~/.themes"
    ]
  },
  {
    "link": {
      "~/.gtkrc-2.0": {
        "force": true,
        "path": ".gtkrc-2.0"
      },
      "~/.config/gtk-3.0/settings.ini": {
        "create": true,
        "force": true
      }
    }
  },
  {
    "shell": [
      [
        "mkdir -p ~/.themes",
        "Generate ~/.themes"
      ],
      [
        "wget -qO- https://github.com/addy-dclxvi/gtk-theme-collections/archive/master.tar.gz | tar vxz --directory=$HOME/.themes --strip-components=1 gtk-theme-collections-master/Fantome",
        "Download Fantome GTK theme"
      ]
    ]
  }
]
